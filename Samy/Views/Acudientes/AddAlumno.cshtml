@model Modelo.Dto.RelacionAlumno
@{
    ViewBag.Title = "AddAlumno";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

  
        <div class="form-group">
           @Html.LabelFor(model => model.AlumnoId, "Alumno", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AlumnoId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AlumnoId, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.RelacionId, "Relacion", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RelacionId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RelacionId, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-default" />
                @Html.ActionLink("Regresar", "RegresarCreate", new {@class= "btn btn-succes" })
            </div>
        </div>
}


