<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<h2>Relaciones</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Alumno.Documento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alumno.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alumno.PrimerApellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alumno.SegundoApellido)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Relaciones)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Alumno.Documento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alumno.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alumno.PrimerApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alumno.SegundoApellido)
            </td>
            <td>
                @Html.ActionLink("Eliminar", "DeleteAlumno", new { id = item.Alumno.Id })
            </td>
        </tr>
    }

</table>
<script>
    function agregarAlumno() {
        debugger;
        var url = "/Acudientes/AddNewAlumno";
        var Documento = $('#Acudiente_Documento').val();
        var Nombre = $('#Acudiente_Nombre').val();
        var PrimerApellido = $('#Acudiente_PrimerApellido').val();
        var SegundoApellido = $('#Acudiente_SegundoApellido').val();
        var Correo = $('#Acudiente_Correo').val();
        var Telefono = $('#Acudiente_Telefono').val();
        var Direccion = $('#Acudiente_Direccion').val();
        var TipoDocumentoId = $('#TipoDocumentoId').val();
        var acudiente = {
            Documento: Documento,
            Nombre: Nombre, PrimerApellido: PrimerApellido,
            SegundoApellido: SegundoApellido,
            Correo: Correo,
            Telefono: Telefono,
            Direccion: Direccion,
            TipoDocumentoId: TipoDocumentoId
        }
        $.ajax({
            url: url,
            data: { acudiente: acudiente },
            type: 'POST',
            dataType: 'json',
            async : false,
            success: function (json) {
                window.location.href = '@Url.Action("AddAlumno","Acudientes")';
            },
            error: function (json) {
               
            }
        });
    }
</script>




